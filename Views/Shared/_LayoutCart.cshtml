<script>
    function getCookie(name) {
        const value = `; ${document.cookie}`;
        const parts = value.split(`; ${name}=`);
        if (parts.length === 2) return parts.pop().split(';').shift();
    }
    let username = getCookie("name").replaceAll("%20", " ")
    console.log(username)
    if (username === undefined) {
        document.getElementById("username").textContent = "Sign In";
    } else {
        document.getElementById("username").textContent = decodeURIComponent(username);
    }

    $.ajax({
        url: "https://localhost:7038/api/cart/total",
        type: "GET",
        contentType: 'application/json; charset=utf-8',
        beforeSend: function (xhr) {
            xhr.setRequestHeader('Authorization', `Bearer ${getCookie("token")}`);
        },
        async: true,
        success: function (data) {
            document.getElementById("super-total").textContent = `$ ${data.toFixed(2)}`
        },
        error: function () {
            console.error("failed to get total money");
        }
    })
    function checkOut() {

        $.ajax({
            url: `https://localhost:7038/api/checkout`,
            type: "POST",
            contentType: 'application/json; charset=utf-8',
            beforeSend: function (xhr) {
                xhr.setRequestHeader('Authorization', `Bearer ${getCookie("token")}`);
            },
            async: true,
            success: function (data) {
                alert("Đã thanh toán");
                console.log(data)
            },
            error: function (error) {
                alert(" failed");
