@model BTThucTap.Models.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "SuaSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card-header bg-primary text-uppercase text-white">
    <h3>Sua San Pham </h3>
</div>

<hr />
<div class="container-fluid">
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="SuaSanPham" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManufacturerId" class="control-label"></label>
                <select asp-for="ManufacturerId" class="form-control" asp-items="ViewBag.ManufacturerId"></select>
                <span asp-validation-for="ManufacturerId" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="Categoryid" class="control-label"></label>
                    <select asp-for="Categoryid" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    <span asp-validation-for="Categoryid" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductPhoto" class="control-label"></label>
                    <input asp-for="@Model.ImageUrl" class="form-control" style="width:230px" />
                    <div class ="custom-file">
                        <input asp-for="ProductPhoto" class=" custom-file-input" id="customFile" />
                    </div>
                    
                    <span asp-validation-for="ProductPhoto" class="text-danger"></span>
                    <td>
                        <img src="../Tree_template/img/product/@Model.ImageUrl" width="50" height="50"
                             style="border:1px" />
                    </td>
                </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
<script type="text/javascript">
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
